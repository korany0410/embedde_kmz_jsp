<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="b">

	<!--셀렉트 하고싶으면 셀렉트 태그를 만든다 -->
	<!-- 셀렉트 태그안에 무조건 들어가야할 내용! 결과값을 어디에 담아야하는지를 지정해줘야함
	 resultType="패키지명.클래스명" 을 리스트로 자동으로 넣어줌
	 BoardDAO로 전달해줌 -->
		<!-- <mapper>안에선 절대 ;금지 -->
	
	<!-- 1) 전체 게시물 조회 
				sqlMapConfig.xml에서 만들어둔 vo.BoardVO대신 board별칭 사용하기
	-->	
	<select id="board_list" resultType="board">

		select * from board order by ref desc, step

	</select>
	
	<!-- 2) 게시물 등록 -->
	<insert id="board_ins" parameterType="board">
		insert into board values( seq_board_idx.nextVal,  #{name}, #{subject}, #{content}, #{pwd}, #{ip}, sysdate, 0,seq_board_idx.currVal, 0, 0  )
	</insert>
</mapper>












